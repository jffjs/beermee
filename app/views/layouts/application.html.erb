<!DOCTYPE html>
<html>
  <head>
    <title><%= @title %></title>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag :defaults %>
                                
    <%= csrf_meta_tag %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div id="container">
      <%= render 'layouts/sidebar' %>
      <div id="body">
        <%= yield %>
      </div>
      <%= debug(params) if Rails.env.development? %>
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>
