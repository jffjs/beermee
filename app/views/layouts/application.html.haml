!!! 5
%html
  %head
    %title
      BeerMee -
      = yield :title
    = render 'layouts/stylesheets'
    = javascript_include_tag  'jquery-1.4.2.min.js',
                              'jquery-ui-1.8.5.custom.min.js',
                              'rails.js',
                              'application.js',
                              'autocomplete-rails.js'
    = yield :scripts
    = csrf_meta_tag
  %body
    = render 'layouts/header'
    #container
      #main
        - if flash[:notice]
          %p.notice= notice
        - elsif flash[:alert]
          %p.alert= alert
        = yield
      %aside
        = yield :aside
      = debug(params) if Rails.env.development?
    = render 'layouts/footer'
