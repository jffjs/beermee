<%= form_for @brewery, :html => { :multipart => true } do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :website %>
    <%= f.text_field :website %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <%= f.fields_for :address do |builder| %>
    <div class="field">
      <%= builder.label :street, "Address" %>
      <%= builder.text_field :street %>
    </div>
    <div class="field" id="city">
      <%= builder.label :city %>
      <%= builder.text_field :city %>
    </div>
    <div class="field" id="country">
      <%= builder.label :country %>
      <%= builder.select  :country_id, Country.all.collect {|c| [c.name, c.id] }, 
                          :include_blank => true %>
    </div>
    <div class="field" id="state">
      <%= builder.label :state %>
      <%= builder.select  :state_id, State.all.collect {|s| [s.name, s.id] }, 
                          :include_blank => true %>
    </div>
    <div class="field">
      <%= builder.label :postal_code, "Postal Code" %>
      <%= builder.text_field :postal_code %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field  :image %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
