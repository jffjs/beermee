<div id="main" >
  <h1 id="showName"><%= @brewery.name %></h1>
  <div id="showImage">
    <%= image_tag @brewery.image.url(:medium), :alt => @brewery.name %>
  </div>
  <%= link_to "Edit", edit_brewery_path, :class => "edit_link" %>
  <div id="infoSection">
    <% unless @brewery.website.blank? %>
      <strong>Website:</strong> <%= link_to @brewery.website, @brewery.website %>
    <% end %>
  </div>
  <div id="description">
    <%= @brewery.info %>
  </div>
</div>
<aside>
  <%= render 'beer_list' %>
</aside>

